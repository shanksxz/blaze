{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off",
				"noUselessFragments": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
        		"noArrayIndexKey": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "warn",
				"useFocusableInteractive": "off"
			}
		}
	},
	"formatter": {
		"lineWidth": 120,
		"indentWidth": 4,
		"enabled": true,
		"ignore": ["node_modules/*", "*.config.*", "*.json", "tsconfig.json", ".turbo"]
	}
}
